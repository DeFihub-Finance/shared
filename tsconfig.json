{
    "compilerOptions": {
        "target": "ESNext",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": true,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "~/src/*": ["src/*"]
        }
    },
    "exclude": ["./node_modules", "./dist", "**/*.test.ts", "./jest.config.ts"]
}
